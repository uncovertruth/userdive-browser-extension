{
  "name": "userdive-browser-extension",
  "version": "0.0.0",
  "description": "Web browser extensions for USERDIVE",
  "main": "index.js",
  "scripts": {
    "build": "run-p b:*",
    "b:pug": "pug app/pages/ -o dist",
    "b:ts": "webpack",
    "dev": "run-p d:*",
    "d:pug": "pug ./app/pages -o ./dist -w",
    "d:ts": "webpack --watch",
    "lint": "tslint '{app,__tests__}/**/*.ts'",
    "test": "jest",
    "prebuild": "rimraf dist",
    "predev": "rimraf dist",
    "precommit": "lint-staged",
    "prewatch": "yarn build",
    "watch": "run-p watch:*",
    "watch:pug": "pug app/pages/ -o dist -w",
    "watch:ts": "webpack --watch"
  },
  "repository": "git+https://github.com/uncovertruth/userdive-browser-extension.git",
  "keywords": [],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "testURL": "http://localhost/",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "tslint --fix",
      "git add"
    ]
  },
  "author": "UNCOVER TRUTH Inc.",
  "bugs": {
    "url": "https://github.com/uncovertruth/userdive-browser-extension/issues"
  },
  "homepage": "https://github.com/uncovertruth/userdive-browser-extension#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "@types/webpack": "^4.4.9",
    "@uncovertruth/eslint-config": "^4.5.0",
    "@uncovertruth/stylelint-config": "^4.4.0",
    "@uncovertruth/tslint-config": "^4.5.0",
    "copy-webpack-plugin": "^4.5.2",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.5",
    "webpack-chrome-extension-reloader": "^0.8.3",
    "webpack-cli": "^3.1.0",
    "window-or-global": "^1.0.1"
  },
  "dependencies": {
    "util": "^0.11.0"
  }
}
